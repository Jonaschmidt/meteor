main_menu.display()

while handle_quit() and not CONTINUE:

    clock.tick(FPS)

    main_menu.checkButton()


while handle_quit() and CONTINUE:

    clock.tick(FPS)

    backdrop.display()

    if meteor.fallen():
        craterList.append(meteor)
        meteor = new Meteor
        score.val = score.val + 1

    meteor.shadowUpdate()

    for i in craterList:
        display i

    score.display()

    player.move()

    player.display()

    if runner.checkCollision():
        CONTINUE = false

    # display end-screen