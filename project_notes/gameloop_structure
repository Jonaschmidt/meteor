mainMenu.display()

while not QUIT and not PLAY:
    handle_quit()

    clock.tick(FPS)

    mainMenu.display()
    mainMenu.checkButtons()


while not QUIT and PLAY:
    handle_quit()

    clock.tick(FPS)

    backdrop.display()

    if meteor.fallen():
        craterList.append(meteor)
        meteor = new Meteor
        score.val = score.val + 1

    meteor.shadowUpdate()

    for i in craterList:
        display i

        if player.checkCollision(i):
            PLAY = False

            craterList.clear()

            score.val = 0
            meteor = Meteor()
            player = Player()

            while not QUIT and not PLAY:
                handle_quit()

                clock.tick(FPS)

                restartMenu.display()
                restartMenu.checkButtons()

    score.display()

    player.move()

    player.display()
